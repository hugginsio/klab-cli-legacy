      "es2017",
      "es2015",
      "es6"
    ],
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**.ts"
  ],
  "exclude": [
    "node_modules",
    ".**"
  ]
}